<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AgentHomePage">


    <RelativeLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:elevation="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gearicon"
            android:background="#FFFF"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:id="@+id/settingsAgent"/>

    </RelativeLayout>


    <TextView
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:id="@+id/counterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bashundhara Gate"
        android:textStyle="bold"
        android:textSize="40sp"/>

    <TextView
        android:id="@+id/counterText"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Counter"
        android:textStyle="bold"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/acText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AC Passenger : "
            android:textColor="#00bb4e"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/ACcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="25sp"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nonacText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NON-AC Passenger : "
            android:textColor="#396bc9"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/nonACcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="25sp"/>

    </LinearLayout>


</LinearLayout>